{% extends 'base.html.twig' %}
{% block title%} List des terrain {% endblock %}

{% block  body %}
    <form  action="{{ path('addterain') }}" class="container p-3" >

        <button class="btn btn-danger">Ajouter</button>

    </form>
    {% if  terain %}
<table  id = " terrain "  class = " table table-striped ">
    <thead>
    <tr>
        <th> Terrain </th>
        <th> Supprimer </th>
        <th> Modifier</th>
        <th>contrat</th>

    </tr>
    </thead>
    <tbody>
    {% for   field in  terain %}
    <tr>
        <td> {{ field.name }} </td>
        <td> <form action="{{ path('supprime',{ 'id':field.id }) }}">

                <button class="btn btn-dark" onclick="return confirm('Are you sure ?')">supprimer</button>
            </form>
        </td>
        <td> <form action="{{ path('updateprovider',{ 'id':field.id }) }}">

                <button class="btn btn-dark" onclick="return confirm('Are you sure ?')">modifier</button>
            </form>
        </td>
        <td>  <form action="{{ path('contrat',{'id':field.id}) }}">

                <button class="btn btn-light">Imprimer</button>
            </form></td>
    </tr>

    {% endfor %}
    </tbody>
</table>
    {% endif %}
{% endblock %}